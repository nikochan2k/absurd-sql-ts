{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "umd",
    "moduleResolution": "node",
    "strict": true,
    "target": "ES2017",
    "rootDir": "src",
    "outDir": "lib",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
